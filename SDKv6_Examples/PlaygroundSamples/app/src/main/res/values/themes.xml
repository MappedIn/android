<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Base application theme using Material3 Light -->
	<style name="Theme.Material3.DayNight" parent="Theme.Material3.Light">
		<!-- Customize primary color for better contrast -->
		<item name="colorPrimary">@android:color/holo_blue_dark</item>
		<item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
		<item name="colorAccent">@android:color/holo_blue_bright</item>

		<!-- Ensure all text is visible (dark text on light background) -->
		<item name="android:textColorPrimary">@android:color/black</item>
		<item name="android:textColorSecondary">@android:color/darker_gray</item>

		<!-- Status bar color -->
		<item name="android:statusBarColor">@android:color/white</item>
		<item name="android:windowLightStatusBar">true</item>
	</style>

	<!-- NoActionBar variant for activities without action bar -->
	<style name="Theme.Material3.DayNight.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>

		<!-- Ensure text is visible in custom headers -->
		<item name="android:textColorPrimary">@android:color/black</item>
		<item name="android:textColorSecondary">@android:color/darker_gray</item>
	</style>
</resources>
